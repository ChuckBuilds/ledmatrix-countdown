{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Countdown Plugin Configuration",
  "description": "Configuration schema for the Countdown plugin - create and manage multiple countdowns with custom images",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the countdown plugin"
    },
    "countdowns": {
      "type": "array",
      "description": "List of countdown entries to display",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for this countdown"
          },
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable or disable this specific countdown"
          },
          "name": {
            "type": "string",
            "description": "Display name for the countdown (e.g., 'Birthday', 'Vacation')",
            "minLength": 1,
            "maxLength": 30
          },
          "target_date": {
            "type": "string",
            "format": "date",
            "description": "Target date for the countdown (YYYY-MM-DD format)"
          },
          "image": {
            "type": "array",
            "x-widget": "file-upload",
            "x-upload-config": {
              "endpoint": "/api/v3/plugins/assets/upload",
              "plugin_id": "countdown",
              "max_files": 1,
              "allowed_types": ["image/png", "image/jpeg", "image/bmp", "image/gif"],
              "max_size_mb": 5
            },
            "description": "Upload an image for this countdown",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for this image"
                },
                "path": {
                  "type": "string",
                  "description": "File path relative to project root"
                },
                "uploaded_at": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Upload timestamp"
                }
              },
              "required": ["id", "path"]
            }
          },
          "display_order": {
            "type": "integer",
            "default": 0,
            "description": "Order for rotation (lower numbers first)"
          }
        },
        "required": ["id", "name", "target_date"]
      }
    },
    "font_family": {
      "type": "string",
      "enum": ["press_start", "four_by_six", "tom_thumb", "tiny", "picopixel"],
      "default": "press_start",
      "description": "Font family for countdown text"
    },
    "font_size": {
      "type": "integer",
      "minimum": 6,
      "maximum": 16,
      "default": 8,
      "description": "Font size in pixels"
    },
    "font_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 255, 255],
      "description": "RGB color for countdown text [R, G, B]"
    },
    "name_font_size": {
      "type": "integer",
      "minimum": 6,
      "maximum": 16,
      "default": 8,
      "description": "Font size for countdown name"
    },
    "name_font_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [200, 200, 200],
      "description": "RGB color for countdown name [R, G, B]"
    },
    "fit_to_display": {
      "type": "boolean",
      "default": true,
      "description": "Automatically fit images to display dimensions"
    },
    "preserve_aspect_ratio": {
      "type": "boolean",
      "default": true,
      "description": "Preserve image aspect ratio when scaling"
    },
    "background_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [0, 0, 0],
      "description": "RGB background color [R, G, B]"
    },
    "display_duration": {
      "type": "number",
      "minimum": 5,
      "maximum": 300,
      "default": 15,
      "description": "How long to display each countdown in seconds"
    },
    "show_expired": {
      "type": "boolean",
      "default": false,
      "description": "Show countdowns that have already passed"
    }
  },
  "required": ["enabled"]
}
